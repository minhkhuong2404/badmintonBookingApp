<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaaaa"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/choose_a_city"

        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/choose_a_date"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/sp_city"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:backgroundTintMode="src_in"
        android:outlineAmbientShadowColor="#1565C0"
        android:outlineSpotShadowColor="#1565C0"
        android:spinnerMode="dropdown"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ripple2"/>

    <EditText
        android:id="@+id/et_date"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/enter_date"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_city"
        android:background="@drawable/ripple2"/>

    <Button
        android:id="@+id/b_show_slots"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:text="@string/show_available_slots"
        app:layout_constraintBottom_toTopOf="@+id/b_show_bookings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:background="@drawable/ripple2"/>

    <Button
        android:id="@+id/b_show_bookings"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:text="@string/show_my_bookings"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ripple2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="wrap_content"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"

        android:layout_marginTop="0dp"
        android:text="Create New Booking" />

    <TextView
        android:id="@+id/placeTitle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="Place" />

    <TextView
        android:id="@+id/placeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/placeTitle"
        android:text="TextView" />

    <TextView
        android:id="@+id/dateBookingTitle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/placeTitle"
        android:text="Date" />

    <TextView
        android:id="@+id/dateBookingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/dateBookingTitle"
        android:text="TextView" />

    <TextView
        android:id="@+id/slotTitle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="95dp"
        android:text="Time slot" />

    <TextView
        android:id="@+id/slotTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/slotTitle"
        android:text="TextView" />

    <TextView
        android:id="@+id/startTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"
        android:text="Start" />

    <Spinner
        android:id="@+id/startSpinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"
        android:layout_toEndOf="@+id/startTitle" />

    <TextView
        android:id="@+id/endTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="130dp"
        android:layout_toEndOf="@+id/startSpinner"
        android:text="End" />

    <Spinner
        android:id="@+id/endSpinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingTitle"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/endTitle" />

    <Button
        android:id="@+id/bookingCommitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="11dp"
        android:text="Create Booking" />




</RelativeLayout>